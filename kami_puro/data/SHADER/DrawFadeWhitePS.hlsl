//==========================================================
// 定数レジスタ CPU側から変更できる数少ないもの
//==========================================================
sampler texSampler;

// 現在の白っぽさ 0~1
float whiteColor;

//**********************************************************
// エントリポイント
//**********************************************************
float4 main(
	float4 iro : COLOR0,
	float2 uv : TEXCOORD0) :COLOR0
{
	float4 color = iro * tex2D(texSampler, uv) + whiteColor;
	return color;
}

